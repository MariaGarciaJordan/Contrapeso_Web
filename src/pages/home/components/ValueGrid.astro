---
import ValueItem from "./ValueItem.astro";

interface Value {
  title: string;
  description: string;
  icon?: string;
}

interface Props {
  values: Value[];
}

const { values } = Astro.props as Props;
---

<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-12 place-items-center">
  {
    values.map((value) => (
      <ValueItem
        title={value.title}
        description={value.description}
        icon={value.icon}
      />
    ))
  }
</div>
