---
interface Props {
  name: string;
  description: string;
  price: number;
  image: string;
}

const { name, description, price, image } = Astro.props as Props;
---

<div 
  class="group w-full max-w-sm bg-white/70 backdrop-blur-md border border-white/30 
         rounded-2xl shadow-lg hover:shadow-2xl transition overflow-hidden"
>
  <!-- Imagen -->
  <div class="w-full h-60 overflow-hidden">
    <img
      src={image}
      alt={name}
      class="w-full h-full object-cover group-hover:scale-105 transition duration-300"
    />
  </div>

  <!-- Información -->
  <div class="p-6 flex flex-col gap-3">
    <h3 class="text-xl font-semibold text-gray-900">{name}</h3>

    <p class="text-gray-700 text-sm leading-relaxed">
      {description}
    </p>

    <p class="text-lg font-bold text-red-700">
      {price.toFixed(2)} €
    </p>

    <button
      class="mt-2 px-4 py-2 bg-red-700 text-white rounded-md 
             hover:bg-red-800 transition shadow-sm"
    >
      Añadir al carrito
    </button>
  </div>
</div>
