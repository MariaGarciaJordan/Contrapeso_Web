---
interface Props {
  name: string;
  description: string;
  price: number;
  image: string;
}

const { name, description, price, image } = Astro.props as Props;
---

<div class="border border-gray-200 rounded-lg p-4 flex flex-col gap-3 hover:shadow-md transition bg-white">
  <img
    src={image}
    alt={name}
    class="w-full h-48 object-cover rounded-md"
  />

  <h3 class="text-xl font-semibold">{name}</h3>

  <p class="text-gray-600 text-sm">
    {description}
  </p>

  <p class="text-lg font-medium text-red-700">
    {price} €
  </p>

  <button
    class="mt-auto px-4 py-2 bg-red-600 text-white rounded-md hover:bg-red-700 transition"
  >
    Añadir al carrito
  </button>
</div>
