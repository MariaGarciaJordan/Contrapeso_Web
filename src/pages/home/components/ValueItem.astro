---
interface Props {
  title: string;
  description: string;
  icon?: string; // opcional, por si añadimos imágenes más tarde
}

const { title, description, icon } = Astro.props as Props;
---

<div class="flex flex-col gap-2 p-4 rounded-lg border border-gray-200 bg-white hover:shadow-md transition">
  {icon && (
    <img src={icon} alt={title} class="w-10 h-10 object-contain opacity-80" />
  )}

  <h3 class="text-xl font-semibold text-gray-900">{title}</h3>

  <p class="text-gray-600 text-sm">
    {description}
  </p>
</div>
