---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props as Props;
---

<div
  class="w-full max-w-sm bg-white/90 backdrop-blur-sm rounded-xl border border-gray-200 
         shadow-md p-6 flex flex-col gap-3 text-center hover:shadow-xl transition"
>
  <!-- ICONO (si en el futuro agregamos) -->
  {icon && (
    <img src={icon} alt={title} class="w-12 h-12 mx-auto opacity-90" />
  )}

  <h3 class="text-xl font-semibold text-gray-900">
    {title}
  </h3>

  <p class="text-gray-700 text-sm leading-relaxed">
    {description}
  </p>
</div>
