---
interface Props {
  title: string;
  description: string;
  icon?: string;
}

const { title, description, icon } = Astro.props as Props;
---

<div class="flex flex-col gap-4">
  
  <!-- Icono -->
  <div class="w-12 h-12 flex items-center justify-center rounded-md bg-red-100">
    {icon ? (
      <img src={icon} alt={title} class="w-8 h-8 object-contain opacity-90" />
    ) : (
      <span class="material-icons text-red-700 text-4xl">verified</span>
    )}
  </div>

  <!-- Título -->
  <h3 class="text-xl font-semibold text-gray-900 leading-tight">
    {title}
  </h3>

  <!-- Descripción -->
  <p class="text-gray-600 text-sm leading-relaxed">
    {description}
  </p>
</div>
