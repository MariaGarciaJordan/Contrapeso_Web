<section class="px-4 sm:px-8 py-24 sm:py-32">
  <!-- TARJETA PREMIUM -->
  <div
    class="max-w-7xl mx-auto bg-white/80 backdrop-blur-md rounded-2xl shadow-2xl border border-white/40
           px-8 sm:px-16 py-16"
  >
    <h2 class="text-center text-3xl sm:text-4xl font-bold tracking-tight text-gray-900 mb-14">
      Nuestros valores
    </h2>

    <ValueGrid values={values} />
  </div>
</section>
