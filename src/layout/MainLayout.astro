---
import "../styles/global.css";
---

<html lang="es" class="text-gray-100">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Contrapeso</title>

    <!-- Iconos Material -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" />

    <!-- Tipografías -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link 
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@400;500;600&display=swap" 
      rel="stylesheet"
    />
  </head>

  <body class="relative min-h-screen font-sans text-gray-50">

    <!-- FONDO PARALLAX PREMIUM -->
    <div 
      class="fixed inset-0 -z-20 bg-[url('/images/background/rustic-bg.jpg')] 
             bg-cover bg-center bg-no-repeat"
      style="animation: slowZoom 35s ease-in-out infinite alternate;"
    ></div>

    <!-- OVERLAY GRIS TRANSLÚCIDO -->
    <div 
      class="fixed inset-0 -z-10 bg-gray-900/30"
    ></div>

    <style>
      @keyframes slowZoom {
        from { transform: scale(1); }
        to { transform: scale(1.05); }
      }
    </style>

    <!-- CONTENIDO -->
    <header class="relative z-50">
      <slot name="header"></slot>
    </header>

    <main class="relative z-10 flex-1">
      <slot></slot>
    </main>

    <footer class="relative z-50">
      <slot name="footer"></slot>
    </footer>

  </body>
</html>
