<nav
  class="w-full fixed top-0 left-0 z-50 
         bg-white/70 backdrop-blur-md border-b border-white/30
         shadow-sm"
>
  <div
    class="mx-auto w-full max-w-[1600px] 
           px-6 sm:px-10 lg:px-14 py-4
           flex justify-between items-center"
  >

    <!-- LOGO -->
    <a href="/" class="text-2xl font-bold tracking-wide text-gray-900">
      Contrapeso
    </a>

    <!-- DESKTOP NAV -->
    <div class="hidden md:flex items-center gap-10 text-gray-800 font-medium">
      <a href="#catalogo" class="hover:text-red-700 transition">Catálogo</a>
      <a href="#valores" class="hover:text-red-700 transition">Valores</a>
      <a href="#contacto" class="hover:text-red-700 transition">Contacto</a>

      <!-- CARRITO -->
      <button 
        id="cart-button"
        class="ml-4 p-2 rounded-md hover:bg-red-700 hover:text-white transition text-gray-900"
      >
        <span class="material-icons">shopping_cart</span>
      </button>
    </div>

    <!-- MOBILE BURGER -->
    <button
      id="menu-toggle"
      class="md:hidden p-2 rounded-md hover:bg-gray-200 transition"
    >
      <span class="material-icons text-gray-900">menu</span>
    </button>
  </div>

  <!-- MOBILE MENU -->
  <div
    id="mobile-menu"
    class="md:hidden hidden flex-col gap-4 bg-white/90 backdrop-blur-md
           border-t border-white/40 px-6 py-6 shadow-lg"
  >
    <a href="#catalogo" class="text-gray-900 font-medium hover:text-red-700 transition">
      Catálogo
    </a>
    <a href="#valores" class="text-gray-900 font-medium hover:text-red-700 transition">
      Valores
    </a>
    <a href="#contacto" class="text-gray-900 font-medium hover:text-red-700 transition">
      Contacto
    </a>

    <!-- Carrito móvil -->
    <button 
      id="cart-button-mobile"
      class="flex items-center gap-2 p-2 rounded-md bg-red-700 text-white hover:bg-red-800 transition mt-4"
    >
      <span class="material-icons text-white">shopping_cart</span>
      Ver carrito
    </button>
  </div>

  <!-- SCRIPT TOGGLE -->
  <script>
    const toggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("mobile-menu");

    if (toggle && menu) {
      toggle.addEventListener("click", () => {
        menu.classList.toggle("hidden");
      });
    }
  </script>
</nav>
